// To fully customize your devcontainer, see https://containers.dev/implementors/json_reference
{
  "name": "Ansible Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
  },

  // Explicitly set the workspace mount point to ensure it is consistent across devcontainer tools.
  // This is useful for the post-create script and other tools that expect a specific mount point.
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",

  "hostRequirements": {"storage": "64gb"},

//  "mounts": [
//    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
//  ],

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "redhat.ansible",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    },
    "jetbrains": {
      "backend": "IntelliJ",
      "settings": {
        "com.intellij:app:HttpConfigurable.use_proxy_pac": true,
        "com.intellij:app:BaseRefactoringSettings.move_search_for_references_for_file": false,
        "com.intellij:app:BaseRefactoringSettings.rename_search_for_references_for_directory": false,
        "com.intellij:app:BaseRefactoringSettings.rename_search_in_comments_for_file": false,
        "com.intellij:app:BaseRefactoringSettings.rename_search_for_references_for_file": false,
        "com.intellij:app:BaseRefactoringSettings.safe_delete_when_delete": false,
        // IDE settings can be added via “Show context actions”|“Add currently modified settings from IDE”
        // A complete list of supported settings is also available through auto-completion
        "com.intellij:app:VcsApplicationSettings.detect_patch_on_the_fly": true,
        "Git4Idea:app:Git-Application-Settings.use_credential_helper": true,
        "com.intellij:app:UsageViewSettings.group_by_file_structure": false,
        "com.intellij:app:UsageViewSettings.group_by_module": false,
        "com.intellij:app:UsageViewSettings.group_by_package": false,
        "com.intellij:app:UsageViewSettings.group_by_usage_type": false
      },
      "plugins": [
        // A set of plugin IDs.
        // Plugin ID can be found on the corresponding plugin’s page at https://plugins.jetbrains.com.
        "org.intellij.plugins.ansible",
        "com.intellij.docker",
        "org.jetbrains.plugins.yaml",
        "mobi.hsz.idea.gitignore",
        "cucumber-java",
        "gherkin",
        "org.jetbrains.completion.full.line",
        "org.jetbrains.plugins.github",
        "com.github.copilot",
        "name.kropp.intellij.makefile",
        "com.intellij.mermaid",
        "Pythonid",
        "PythonCore",
        "de.achimonline.ansible_lint"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/git": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    },
    // This feature provides make, git, rsync, and other common tools.
    // The base image already has git, but this feature ensures it's configured.
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installMake": true,
      "installRsync": true,
      "username": "vscode",
      "upgradePackages": true
    }
  },

  // Needed to run Docker commands inside the container.
  "runArgs": [
    "--privileged"
  ],


  "postCreateCommand": ".devcontainer/post-create.sh ${containerWorkspaceFolder}",
}
